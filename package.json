{
  "name": "nd-assistant-backend",
  "version": "1.0.0",
  "description": "Backend para Asistente de Planeación Inclusiva y Neurodivergente",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'Build completed'",
    "prestart": "npm run init:dirs && npm run lint",
    "predev": "npm run init:dirs",
    "init:dirs": "node scripts/init-dirs.js",
    "setup": "npm run init:dirs && echo 'Proyecto configurado. Recuerda configurar .env'",
    "docker:build": "docker build -t nd-assistant-backend .",
    "docker:run": "docker run -p 3001:3001 nd-assistant-backend",
    "logs:tail": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "logs:requests": "tail -f logs/requests.log",
    "logs:nd": "tail -f logs/nd-operations.log"
  },
  "keywords": [
    "neurodiversidad",
    "inclusión",
    "educación",
    "dua",
    "adaptaciones",
    "gemini",
    "ai",
    "accessibility"
  ],
  "author": "ND Assistant Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.4.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/nd-assistant-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/nd-assistant-backend/issues"
  },
  "homepage": "https://github.com/your-org/nd-assistant-backend#readme"
}